{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@app": [
              "src"
            ],
            "@app/*": [
              "src/*"
            ]
          }
    }
}
